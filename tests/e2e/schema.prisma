datasource db {
  provider = "postgresql"
}

generator select {
  provider = "node ../../dist/generator/index.js"
  output   = "./generated"
}

/// @PrismaSelect.map([BlogPost])
model Post {
  id        Int       @id @default(autoincrement())
  title     String
  body      String?
  published Boolean   @default(false)
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
  comments  Comment[]
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Comment {
  id     Int    @id @default(autoincrement())
  text   String
  post   Post   @relation(fields: [postId], references: [id])
  postId Int
}
